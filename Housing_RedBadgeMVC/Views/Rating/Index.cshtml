@model IEnumerable<Housing_RedBadgeMVC.Models.RatingModels.RatingListItem>

@{
    ViewBag.Title = "Index";
    var listItem = new Housing_RedBadgeMVC.Models.RatingModels.RatingCreate();
}

    @Html.Partial("_RatingCreate", listItem)

<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HousingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Posted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HousingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Posted)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@

                @Html.Partial("_RatingEdit", item)
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "link-style" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "link-style" })
            </td>
        </tr>
    }

</table>
