
@model Housing_RedBadgeMVC.Models.RatingModels.RatingListItem

@{
    ViewBag.Title = "Edit";
}

    <a href="#" class="card-link" data-toggle="modal" data-target="#editModal">Edit</a>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="exampleModalLabel"><font color="black">Editing Housing ID: </font> <font color="green">@Html.DisplayFor(model => model.HousingId)</font></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="text-align: left; color: black;">
                @using (Html.BeginForm("Edit", "Rating", new { id = Model.Id }))
                {
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        <small class="form-text text-muted"><label style="font-weight: bold">Housing ID: </label> @Html.DisplayFor(model => model.HousingId)</small>
                    </div>

                    <div class="form-group">
                        <small class="form-text text-muted"><label style="font-weight: bold">Applicant ID: </label> @Html.DisplayFor(model => model.ApplicantId)</small>
                    </div>

                    <div class="form-group">
                        <small class="form-text text-muted" style="font-weight: bold">@Html.LabelFor(model => model.Rating)</small>
                        @Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-primary">@Html.ActionLink("Detailed Rating View", "Edit", new { id = Model.HousingId }, new { @class = "action-link" })</button>*@
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
                </div>
    </div>
</div>
